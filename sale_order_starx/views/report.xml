<?xml version="1.0" encoding="UTF-8" ?>
<!-- ejemplo de comnetario -->
<odoo>
    <data> 
        <report id="report_starx"
            string="Presupuesto / Pedido Starx"
            model="sale.order"
            report_type="qweb-pdf"
            name="sale_order_starx.report_starx_template"
            file="sale_order_starx.report_starx_template"
        />
<!-- attachment="(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')" -->
 <template id="report_starx_template">
           <t t-call="web.html_container">
               <!-- Pagina 1 llamo al reporte  -->
               <t t-foreach="docs" t-as="doc">
                  <t t-call="report_saleorder_document.report_starx_template_document" t-lang="doc.partner_id.lang"/>
                   <!--    FIN pagina 1 -->
               </t>                            
          </t>
        </template>
    
<template id="report_starx_template_document">
    <!-- Agrego el campo -->
    <p t-field="doc.pricelist_id.currency_id"/>
    <!-- FIN Agrego el campo -->
</template>
    </data>
</odoo>
