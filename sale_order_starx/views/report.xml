<odoo>
    <data> <!--Se configura el botÃ³n-->
        <report id="report_starx" <!--nombre del modelo-->
            string="Presupuesto / Pedido Starx" <!--Nombre que ve el usuario final-->
            model="sale.order" <!--Modelo donde se va a configurar el reporte-->
            report_type="qweb-pdf" <!--Tipo de reporte, se configura para exportar a PDF-->
            name="sale_order_starx.report_starx_template" <!--Este es el nombre del template, se llama-->
        />

        <template id="report_starx_template"> <!--Nombre del template-->
            <t t-call="report.html_container">
		    <t t-call="report.external_layout">
                    <div class="header">
                        Mi Empresa / Logo
                    </div>
                    <div class="page">
                        <h1>Esto es un Reporte</h1>
                        <p>Personalizado, de Odoo</p>
                    </div>
                    <div class="footer">
                        <small>Mi Footer</small>
                    </div>
		    </t>
            </t>
        </template>
    </data>
</odoo>
