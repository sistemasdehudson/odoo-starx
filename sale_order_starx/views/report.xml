<odoo>
    <data> <!--Se configura el botón-->
        <report id="report_starx"
            string="Presupuesto / Pedido Starx"
            model="sale.order"
            report_type="qweb-pdf"
            name="sale_order_starx.report_starx_template"
        /> <!--FIn configuración de botón-->

        <template id="report_starx_template" inherit_id="sale.report_saleorder"> <!--Con 'inherit_id' heredamos el template base para poder imprimir los datos ingresados al presupuesto-->
		<t t-call="web.html_container"> <!--Se le dice que esto es un reporte-->
		    <t t-call="web.external_layout">
			    
			   <field name="payment_term_id" position="after">
    			      <field name="pricelist_id" />
			   </field>
			    
		    </t>
		</t>
        </template>
    </data>
</odoo>
